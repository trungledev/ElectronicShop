@model IEnumerable<ElectronicShop.Models.LookupViewModel>
@{
    Layout = "/Views/CRUD/_IndexLayout.cshtml";
    var controllerName = ViewData["ControllerName"] as string;
}
    <table class="table">
        <thead>
            <th class="col">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th class="col">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
            </th>
        </thead>
        @foreach(var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <button id="btnCrud" class="btn btn-success" data-controller="@controllerName" data-route-id="@item.Id"
                    data-crud="Update" data-bs-toggle="modal" data-bs-target="#crudModal" type="button">Sửa</button> |
                <button id="btnCrud" class="btn btn-danger" data-controller="@controllerName" data-route-id="@item.Id"
                    data-crud="Delete" data-bs-toggle="modal" data-bs-target="#crudModal" type="button">Xóa</button>
            </td>
        </tr>
        }
    </table>